{
	"name": "eventos-backend",
	"version": "3.0.0",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"dev": "tsx watch src/server.ts",
		"build": "tsc -p tsconfig.json",
		"start": "node dist/server.js",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"lint:types": "tsc --noEmit -p tsconfig.json",
		"lint": "eslint -c ./eslint.config.js \"src/**/*.{ts,tsx}\"",
		"lint:fix": "eslint -c ./eslint.config.js \"src/**/*.{ts,tsx}\" --fix",
		"lint:cache": "eslint -c ./eslint.config.js \"src/**/*.{ts,tsx}\" --cache --cache-location .eslintcache --cache-strategy content",
		"check:lint": "npm run lint:types && npm run lint",
		"format": "prettier -w .",
		"check:mongo": "tsx src/system/cli/check-mongo.ts",
		"check:imports": "tsx src/system/cli/check-import-extensions.ts",
		"db:ensure": "tsx src/system/cli/db-ensure.ts",
		"seed": "tsx src/system/cli/seed.ts",
		"generate-jwt": "tsx src/system/cli/generate-jwt.ts",
		"docs:generate": "tsx scripts/generate-api-docs.ts",
		"docs:md-to-pdf": "npx md-to-pdf docs/API-REFERENCE.md --config-file scripts/md-to-pdf.config.js"
	},
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "7.3.4",
		"@fastify/cors": "^10.0.0",
		"@fastify/helmet": "^13.0.2",
		"@fastify/rate-limit": "^10.3.0",
		"@fastify/swagger": "9.5.2",
		"@fastify/swagger-ui": "5.2.3",
		"bcrypt": "^6.0.0",
		"dotenv": "^16.4.5",
		"express-oauth2-jwt-bearer": "^1.7.1",
		"fastify": "^5.6.1",
		"fastify-plugin": "^5.0.0",
		"fastify-type-provider-zod": "^4.0.2",
		"jsonwebtoken": "^9.0.2",
		"mongodb": "^6.20.0",
		"openapi-types": "12.1.3",
		"pino": "^9.3.2",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@types/bcrypt": "^6.0.0",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^22.19.1",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.46.1",
		"@vitest/ui": "^4.0.8",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-unicorn": "^55.0.0",
		"pino-pretty": "^13.1.1",
		"pino-roll": "^4.0.0",
		"prettier": "^3.6.2",
		"tsx": "^4.19.1",
		"typescript": "^5.6.2",
		"vitest": "^4.0.8"
	}
}
