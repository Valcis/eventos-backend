{
  "name": "eventos-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint:types": "tsc --noEmit -p tsconfig.json",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "lint:watch": "eslint \"src/**/*.{ts,tsx}\" --cache --watch --max-warnings=0",
    "check:mongo": "tsx src/tools/check-mongo.ts",
    "check:imports": "tsx src/scripts/check-import-extensions.ts",
    "seed": "tsx src/scripts/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/swagger": "^9.0.0",
    "@fastify/swagger-ui": "^5.0.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.6.1",
    "fastify-plugin": "^5.0.0",
    "mongodb": "^6.20.0",
    "pino": "^9.3.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "pino-pretty": "^13.1.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-unicorn": "^55.0.0"
  }
}